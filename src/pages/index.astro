---
// import moduleName from '';
import { actions } from 'astro:actions';
import PlaceCard from '../components/PlaceCard.astro';
import Layout from '../layouts/Layout.astro';

const { data, error } = await Astro.callAction(actions.getPlaces, {});

if (error) {
  console.error(error);
  return;
}
---

<Layout>
  <h1 class='text-3xl font-extrabold'>Lugares</h1>
  <div class='max-w-7xl grid grid-cols-3 gap-4'>
    {data.map((place) => <PlaceCard place={place} />)}
  </div>
</Layout>
